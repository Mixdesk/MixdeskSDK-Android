<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MQMatchMatch"
    android:padding="@dimen/mx_audio_edge">

    <TextView
        android:id="@+id/tv_recorder_keyboard_status"
        style="@style/MQWrapWrap"
        android:layout_centerHorizontal="true"
        android:text="@string/mx_audio_status_normal"
        android:textColor="@color/mx_chat_audio_recorder_tip_textColor"
        android:textSize="@dimen/mx_audio_textSize" />

    <ImageView
        android:id="@+id/iv_recorder_keyboard_anim"
        style="@style/MQWrapWrap"
        android:layout_below="@id/tv_recorder_keyboard_status"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:src="@drawable/mx_voice_level1" />

</RelativeLayout>