<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MQMatchWrap.Horizontal"
    android:background="#303d42">

    <com.mixdesk.mixdesksdk.widget.MXImageView
        android:id="@+id/photo_iv"
        style="@style/MQMatchWrap"
        android:scaleType="center"
        app:mx_iv_isSquare="true"
        tools:src="@drawable/mx_ic_camera_active" />

    <TextView
        android:id="@+id/tip_tv"
        style="@style/MQMatchWrap"
        android:layout_alignBottom="@id/photo_iv"
        android:layout_marginBottom="@dimen/mx_size_level3"
        android:gravity="center"
        android:text="@string/mx_take_picture"
        android:textColor="#adb2bb"
        android:textSize="@dimen/mx_textSize_level1" />

    <ImageView
        android:id="@+id/flag_iv"
        style="@style/MQWrapWrap"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:paddingBottom="@dimen/mx_size_level2"
        android:paddingLeft="@dimen/mx_size_level2"
        android:paddingRight="@dimen/mx_size_level1"
        android:paddingTop="@dimen/mx_size_level1"
        android:src="@drawable/mx_ic_cb_normal" />

</RelativeLayout>