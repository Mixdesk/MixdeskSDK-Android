<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MQMatchWrap.Vertical"
    android:gravity="center"
    android:padding="@dimen/mx_size_level3">

    <TextView
        android:id="@+id/content_tv"
        style="@style/MQWrapWrap"
        android:text="@string/mx_no_agent_leave_msg_tip"
        android:textColor="@color/mx_chat_event_gray"
        android:textSize="@dimen/mx_textSize_level1" />

    <TextView
        android:id="@+id/tv_no_agent_leave_msg"
        style="@style/MQWrapWrap"
        android:paddingLeft="@dimen/mx_size_level1"
        android:paddingTop="@dimen/mx_size_level1"
        android:paddingRight="@dimen/mx_size_level1"
        android:text="@string/mx_leave_msg"
        android:textColor="@color/mx_colorPrimary"
        android:textSize="@dimen/mx_textSize_level1" />

</LinearLayout>