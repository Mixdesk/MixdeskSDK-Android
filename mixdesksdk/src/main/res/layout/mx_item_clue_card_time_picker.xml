<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mx_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mx_chat_event_gray"
        android:layout_marginBottom="@dimen/mx_size_level1"
        android:textSize="@dimen/mx_textSize_level1"
        tools:text="请输入 姓名" />

    <TextView
        android:id="@+id/mx_input_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mx_size_level2"
        tools:text="测试内容"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/mx_textSize_level1"
        android:background="@drawable/mx_bg_edit_view"
        android:minWidth="80dp" />

</LinearLayout>